<%= simple_form_for(coach_profile) do |f| %>
  <%= f.input :coach_start_date %>
  <%= f.input :description %>
  <%= f.association :sport %>
  <%= f.association :user, label: "Which user is creating it?",
  :as => :hidden, :input_html => { :value => current_user.id }  %>
  <% if @exists %>
  <%= f.submit ("Update") %>
  <% else %>
  <%= f.submit ("Create") %>
  <% end %>
<% end %>
