<%= form_for_filterrific @filterrific do |f| %>
  <div class='d-flex'>
    Sport:
    <%= f.select(
      :with_sport,
      @filterrific.select_options[:with_sport],
      { include_blank: '- Any -' },
      class:'form-control filter-input'
    ) %>
  </div>

  <div>
    <%= link_to(
      'Reset filters',
      reset_filterrific_url,
      class:'reset-filter'
    ) %>
  </div>
<% end %>
