<div class='form'>
<%= simple_form_for [ user, coach_profile ] do |f| %>
  <%= f.input :coach_start_date %>
  <%= f.input :description %>
  <%= f.association :sport %>
  <%= f.input :photo, as: :file %>
  <%= f.association :user,
  :as => :hidden, :input_html => { :value => current_user.id }  %>
    <% if @exists %>
    <%= f.submit ("Update") %>
    <% else %>
    <%= f.submit ("Create") %>
    <% end %>
  <% end %>
