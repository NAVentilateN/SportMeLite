<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div class='flex'>
    <%= link_to root_path, class: "navbar-brand" do %>
      <%= image_tag "https://artprojectsforkids.org/wp-content/uploads/2021/05/Draw-a-Soccer-Ball.jpg.webp" %>
    <% end %>
  </div>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">

    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item">
          <%= link_to "Home", root_path, class: "nav-link  #{"active" if current_page?(root_path)}" %>
        </li>
        <li class="nav-item">
            <%= link_to "My Lessons", lessons_path, class: "nav-link  my-lessons-btn #{"hide" if current_page?(coach_lessons_path)} #{"hide" if current_page?(user_coach_profile_path(current_user, current_user.coach_profile))} #{"active" if current_page?(lessons_path)}" %>
        </li>
        <% if current_user.coach_profile %>
          <li class="nav-item">
            <%= link_to "Coach Lessons", coach_lessons_path, class: "nav-link coach-lessons-btn #{"hide" if current_page?(lessons_path)} #{"hide" if current_page?(root_path)} #{"active" if current_page?(coach_lessons_path)}" %>
          </li>
          <li class="nav-item">
            <%= link_to "Coach Profile", user_coach_profile_path(current_user, current_user.coach_profile), class: "nav-link coach-profile-btn #{"hide" if current_page?(lessons_path)} #{"hide" if current_page?(root_path)} #{"active" if current_page?(user_coach_profile_path(current_user, current_user.coach_profile))}" %>
          </li>
          <li class="nav-item">
            <div class="custom-control custom-switch">
              <input type="checkbox" class="custom-control-input" id="customSwitch1" >
              <% if params[:controller] == 'lessons' || params[:controller] == 'pages'  %>
              <label class="custom-control-label" for="customSwitch1"><span id="toggleLabel">Student</span></label>
              <% else %>
              <label class="custom-control-label" for="customSwitch1"><span id="toggleLabel">Coach</span></label>
              <% end %>
            </div>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Create Coach Profile", new_user_coach_profile_path(current_user), class: "nav-link #{"active" if current_page?(new_user_coach_profile_path(current_user))}" %>
          </li>
        <% end %>

        <li class="nav-item dropdown">
          <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <div class='dropdown-item'>Logged in: <strong><%= current_user.name %></strong></div>
            <%= link_to "Action", "#", class: "dropdown-item" %>
            <%= link_to "Another action", "#", class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
