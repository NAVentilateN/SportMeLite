<div class='container form'>
  <h2 class='header'>Edit lesson</h2>
  <%= simple_form_for(@lesson, method: :patch, url: coach_lesson_path) do |f|%>
      <%= f.input :start_date_time, :as => :datetime %>
      <%= f.input :end_date_time, :as => :datetime %>
      <%= f.input :description %>
      <%= f.input :location %>
      <%= f.input :price, as: :numeric %>
      <%= f.submit class:'btn btn-primary' %>
  <% end %>
</div>
