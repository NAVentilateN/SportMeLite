   <%= simple_form_for(lesson, method: :patch, url: coach_lesson_path(lesson), html: { class: lesson.errors.any? ? '' : 'd-none', data: { edit_lesson_target: 'form', action: 'submit->edit-lesson#update' } } )do |f|%>
              <%= f.input :start_date_time, :as => :datetime %>
              <%= f.input :end_date_time, :as => :datetime %>
