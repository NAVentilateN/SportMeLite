<div class="chat" id="messages" data-chat-id="<%= @chat.id %>">
  <div class="chat-header clearfix">
    <div class="row">
        <div class="col-lg-6">
            <div class="chat-about">
              <% if @chat.coach == current_user %>
                <h6 class="m-b-0"><%= @chat.student.name %></h6>
              <% else %>
                <h6 class="m-b-0"><%= @chat.coach.name %></h6>
              <% end %>
            </div>
        </div>
    </div>
  </div>
  <div class="chat-history">
    <ul class="m-b-0">
      <% @chat.messages.each do |message| %>
        <li class="clearfix">
          <% if message.user == current_user %>
            <div class="message-data text-right">
              <span class="message-data-time"><small><em><%= message.created_at.strftime("%a %b %e at %l:%M%p") %></small></em></span>
              <p><small><%= current_user.name %></small></p>
            </div>
            <div class="message other-message float-right"><%= message.content %></div>
          <% else %>
            <div class="message-data">
              <span class="message-data-time"><small><em><%= message.created_at.strftime("%a %b %e at %l:%M%p") %></small></em></span>
              <p><small><%= message.user.name %></small></p>
            </div>
            <div class="message my-message"><%= message.content %></div>
          <% end %>
        </li>
      <% end %>
    </ul>
  </div>
</div>

<%= simple_form_for @message, url: coach_chat_messages_path(@coach, @chat), remote: true do |f| %>
  <%= f.input :content, label: false, placeholder: "Type your message here" %>
<% end %>
